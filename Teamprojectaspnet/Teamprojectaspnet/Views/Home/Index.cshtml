<div class="row">
    <div class="col-md-8">
        <select class="form-control" id="markertypes" onchange="ShowMarker()">
            @for (int i=0; i<ViewBag.Types.Length; i++)
            {
             <option>@ViewBag.Types[i]</option>
             }
        </select>
    </div>
    <div class="col-md-4">
        <button class="btn btn-default" id="Find" onclick="FindMarkers()">FIND</button>
    </div>
</div>
    <br />
    <br />
    <div class="row">
        <div class="col-md-8">
            <div id="canvas" style="height: 600px; width:600px;"></div>
        </div>
        <div class="col-md-4">
            <label id="currentmarkertype" />
            <p id="demo"></p>
        </div>
    </div>
    @section scripts {
    <script type="text/javascript">
        var map;
        var markers=[];
    $(document).ready(function () {
       // GetMarkerTypes();
        SetMap();
        });
        function SetMap() {
            google.maps.visualRefresh = true;
            var Rivne = new google.maps.LatLng(50.6231, 26.2274);
            var mapOptions = {
                zoom: 14,
                center: Rivne,
                mapTypeId: google.maps.MapTypeId.G_NORMAL_MAP
            };
            map = new google.maps.Map(document.getElementById("canvas"), mapOptions);
        }
        function GetMarkerTypes() {
            $.getJSON('@Url.Action("GetAllTypes","Home")', function (data) {
                $.each(data, function (i, item) {
                    $("#markertypes").append("<option value="+item+">"+item+"</option>");
                });
            })
        }
        function ShowMarker() {
            var x = document.getElementById("markertypes").value;
            document.getElementById("currentmarkertype").textContent = "You selected: " + x;
            }
        function FindMarkers() {
            var type = document.getElementById("markertypes").value;
            $.ajax 
                ({
                    type: "POST", 
                    url: "/Home/GetMarkersOfType", 
                    dataType: "json", 
                    data: { type: type },
                    success: function (result) { 
                        $.each(result, function (i, item) {
                            var marker = new google.maps.Marker(
                                {
                                    position: { lat: item.Lat, lng: item.Lng},
                                    map: map,
                                    animation: google.maps.Animation.DROP
                                });
                        });
                        alert(result)
                    },
                });
        }
    </script>
    }
